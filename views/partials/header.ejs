<HTML>
<head>
	<title>Quidditch</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
	<link rel='stylesheet' href='/css/styles.css' />
	<script src="/js/jquery.min.js"></script>
</head>
<body>
<div class="ui menu fixed">
  <a href="/game" class="item"><i class="gamepad icon"></i>Play Game</a>
  <a href="/brooms" class="item"><i class="quidditch icon"></i>Brooms</a>
  <a href="/roster" class="item"><i class="user circle icon"></i>Players</a>
  <a href="/" class="item"><i class="user plus icon"></i>Add Player</a>
  <a href="/log" class="item"><i class="file alternate outline icon"></i>Logs</a>
  <div class="right menu">
    <% if(!currentUser){ %>
    <a href="/login" class="item">Login <i class="unlock icon"></i></a>
    <a href="/register" class="item">Register <i class="folder open icon"></i></a>
    <% } else { %>
    <li><a href="#">Signed In As: <%= currentUser.username %></a></li>
    <li><a href="/logout" class="item">Logout <i class="window close icon"></i></a></li>
    <% } %>
  </div>
</div>
<div class="ui main text container">
        <div class="ui top attached segment">